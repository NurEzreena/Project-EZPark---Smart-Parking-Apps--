<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Box background color -->
    <solid android:color="#CBDCEB" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Border (stroke) -->
    <stroke android:width="2dp" android:color="#133E87" />

    <!-- Padding -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
