<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#CBDCEB"
            android:elevation="8dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register New Vehicle"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter vehicle details"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Enter Plate Number -->
            <EditText
                android:id="@+id/plateNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Plate Number"
                android:textAllCaps="true"
                android:inputType="text"
                android:layout_marginBottom="8dp" />

            <!-- Enter Model Name -->
            <EditText
                android:id="@+id/modelNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Model Name"
                android:inputType="text"
                android:layout_marginBottom="16dp" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <!-- Cancel Button -->
                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:layout_margin="1dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#133E87" />

                <!-- Register Button -->
                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Register"
                    android:layout_margin="1dp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#133E87" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
