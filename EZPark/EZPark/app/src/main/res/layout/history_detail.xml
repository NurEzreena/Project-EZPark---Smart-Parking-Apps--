<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#F3F3E0">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HISTORY DETAIL"
        android:letterSpacing="0.1"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="23sp"
        android:layout_margin="3dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:backgroundTint="#2A3663"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Parking"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:backgroundTint="#6482AD"
            android:letterSpacing="0.2"
            android:layout_margin="10dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:paddingHorizontal="20dp"
                    android:textColor="@android:color/white"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/display_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="20sp"
                    android:letterSpacing="0.1"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="5dp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:paddingHorizontal="20dp"
                    android:textColor="@android:color/white"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/display_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="5dp"/>

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:paddingHorizontal="20dp"
                    android:textColor="@android:color/white"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/display_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="5dp"/>

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/tv_park_duration"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:letterSpacing="0.1"
                    android:paddingHorizontal="20dp"
                    android:text="Parking Duration:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/display_park_duration"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Parking Duration:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"  />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_charge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charge: "
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:paddingHorizontal="20dp"
                    android:textColor="@android:color/white"
                    android:layout_margin="5dp"/>


                <TextView
                    android:id="@+id/display_charge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charge: "
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="5dp"/>

            </TableRow>




        </TableLayout>


        <Button
            android:id="@+id/btn_OK"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:backgroundTint="#6482AD"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/parking_receipt" />

</LinearLayout>