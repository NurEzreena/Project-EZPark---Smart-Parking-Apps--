<?xml version="1.0" encoding="utf-8"?>

<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F7F8E9"
        android:gravity="center">

        <!-- Icon Section -->
        <ImageView
            android:id="@+id/car_icon"
            android:layout_width="149dp"
            android:layout_height="108dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_car_location" />

        <!-- Tab Selector -->
        <LinearLayout
            android:id="@+id/tab_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#2439A0"
            android:padding="4dp">

            <!-- Login Tab -->
            <TextView
                android:id="@+id/login_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#2439A0"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- New User Tab -->
            <TextView
                android:id="@+id/new_user_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#FFFF"
                android:text="New User"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Sign-Up Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="50dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#2439A0">

            <!-- Username -->
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#b2c6e4"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/ic_account" />

            <!-- Full Name -->
            <EditText
                android:id="@+id/full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#b2c6e4"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/ic_person"/>

            <!-- Phone Number -->
            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number (+60-12345)"
                android:inputType="phone"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#b2c6e4"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/ic_call"/>

            <!-- Email -->
            <EditText
                android:id="@+id/email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail Address"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#b2c6e4"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/ic_email"/>

            <!-- Password -->
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#b2c6e4"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/ic_lock"/>

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/password_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password Confirmation"
                android:inputType="textPassword"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#b2c6e4"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/ic_cornfirm"/>

            <!-- Date of Birth -->
            <EditText
                android:id="@+id/date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth (DD-MM-YYYY)"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#b2c6e4"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/ic_calendar"/>

            <!-- Sign-Up Button -->
            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#5A8DEE"
                android:padding="12dp"
                android:text="Sign Up"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>


</android.widget.ScrollView>